<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    --> 
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- <style name="AppBaseThemeNight" parent="android:Theme.Night"></style> -->
    
    <!-- 日间模式主题 -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        
    </style>
    <!-- 夜间模式 -->
    <!-- <style name="AppNightTheme" parent="">
        
    </style> -->
    
    <!-- 对话框 - 透明的（没有标题，没有边框） -->
	<style name="dialog_transparent" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@null</item>
         <item name="android:windowIsFloating">true</item>
         <item name="android:windowIsTranslucent">true</item>
         <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/base_transparent</item>
         <item name="android:windowBackground">@color/base_transparent</item>
         <item name="android:backgroundDimEnabled">true</item>
   </style>
   
    <!-- 应用主题 -->
    <style name="AppTheme" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- 对话框 - 透明的（没有标题，没有边框） -->
	<style name="dialog_top" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@null</item>
         <item name="android:windowIsFloating">true</item>
         <item name="android:windowIsTranslucent">true</item>
         <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/base_transparent</item>
         <item name="android:windowBackground">@color/base_transparent</item>
         <item name="android:backgroundDimEnabled">true</item>
         <item name="android:windowAnimationStyle">@style/dilaog_top_animation</item>
   </style>
   
	<style name="dilaog_top_animation" parent="@android:style/Animation.Activity" mce_bogus="1">
		<item name="android:activityCloseEnterAnimation">@anim/index_poster_in</item>
		<item name="android:activityCloseExitAnimation">@anim/index_poster_out</item>
	</style>
</resources>